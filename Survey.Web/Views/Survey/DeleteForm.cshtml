@model Survey.Core.Models.Forms

@{
    ViewData["Title"] = "DeleteForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--begin::Wrapper-->
<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
    <!--begin::Content-->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <div class="subheader py-6 py-lg-8 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <!--begin::Info-->
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <!--begin::Page Heading-->
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <!--begin::Page Title-->
                        <h5 class="text-dark font-weight-bold my-1 mr-5">Survey</h5>
                        <!--end::Page Title-->
                        <!--begin::Breadcrumb-->
                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item text-muted">
                                <a href="" class="text-muted">Design & config</a>
                            </li>
                            <li class="breadcrumb-item text-muted">
                                <a class="text-muted" href="/Survey/ManageForm">Manage survey</a>
                            </li>
                            <li class="breadcrumb-item text-muted">
                                <a href="" class="text-muted">Delete the survey</a>
                            </li>
                        </ul>
                        <!--end::Breadcrumb-->
                    </div>
                    <!--end::Page Heading-->
                </div>
                <!--end::Info-->
            </div>
        </div>
        <!--end::Subheader-->
        <!--begin::Entry-->
        <div class="d-flex flex-column-fluid">
            <!--begin::Container-->
            <div class="container">
                <div class="row">
                    <div class=" col-lg-3"></div>
                    <div class="col-lg-6 center-block">
                        <div class="card card-custom gutter-b" style="background-color: #404040;">


                            <div class="card-body d-flex align-items-center py-5 py-lg-15">

                                <a class="btn btn-icon pulse pulse-danger mr-5">
                                    <i class="flaticon2-information"></i>
                                    <span class="pulse-ring"></span>
                                </a>
                                <!--end::Icon-->
                                <!--begin::Description-->
                                <div class="m-0 text-white font-weight-bold font-size-md">
                                    <p class="mb-0"> Are you sure you want to delete the form? This action cannot be undone. </p>
                                </div>
                                <!--end::Description-->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-lg-3"></div>
                    <div class=" col-lg-6 center-block">
                        <!--begin::Card-->
                        <div class="card card-custom gutter-b example-compact">

                            <!--begin::Form-->
                            <form asp-action="DeleteForm" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="card-body">
                                    <div class="form-group mb-8">
                                        <div class="card-header">
                                            <h4 class="card-label text-center" style="color: #CA0C39;font-weight:800;">
                                                Delete the survey
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Survey Name</label>
                                        <div class="col-lg-9">
                                            <input asp-for="FormTitle" type="text" class="form-control" placeholder="Form Name" readonly />
                                            <span asp-validation-for="FormTitle" class="form-text text-muted"></span>
                                            </div>
                                        </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Survey Description</label>
                                        <div class="col-lg-9">
                                            <input asp-for="Description" type="text" class="form-control" placeholder="Form Description" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Survey Status</label>
                                        <div class="col-lg-9">
                                            <input asp-for="Form_Status" type="text" class="form-control  " placeholder="Status" readonly />
                                            <span asp-validation-for="Form_Status" class="form-text text-muted"></span>
                                        </div>
                                        </div>
                                    </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-6 text-center">
                                            <form asp-action="DeleteForm">
                                                <input type="hidden" asp-for="Id" />
                                                <input type="submit" value="Delete" id="#kt_sweetalert_demo_8" class="btn btn-del mr-2" />
                                                <a asp-action="ManageForm" class="btn btn-secondary">Back to List</a>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                        <!--end::Card-->
                    </div>

                </div>
            </div>
            <!--end::Container-->
        </div>
        <!--end::Entry-->
    </div>
    <!--end::Content-->

</div>
<!--end::Wrapper-->

<!--end::Global Theme Bundle-->
<!--begin::Page Scripts(used by this page)-->
<script src="~/Admin/theme/demo4/dist/assets/js/pages/features/miscellaneous/sweetalert2.js"></script>
<style>
    .card.card-custom {
        box-shadow: 0px 0px 10px 0px rgb(82 63 105 / 18%);
        border: 0;
    }

    .pulse .pulse-ring {
        height: 43px;
        width: 43px;
        border-color: #CA0C39 !important;
    }


    .btn.btn-light-danger {
        color: #CA0C39;
        background-color: #ffe2e55c;
        border-color: transparent;
    }
</style>