@inject Survey.Infrastructure.Data.ApplicationDbContext db
@using Survey.Infrastructure.Utility
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using Survey.Core.Constants

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
  
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">

            <!--begin::Card-->
            <div class="card card-custom">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            Projects
                        </h3>
                    </div>
                    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Add)).Result.Succeeded)
                    {
                        <div class="card-toolbar">

                            <a asp-controller="Project" asp-action="CreateProject" type="button" class="btn btn-success btn-rounded" data-mdb-ripple-color="dark">
                                <i class="fa fa-plus"></i>New Project
                            </a>

                        </div>
                    }
                </div>
                <div class="card-body">
                    <!--begin: Search Form-->
                    <!--begin::Search Form-->
                    <div class="mb-7">
                        <div class="row align-items-center">
                            <form asp-action="Index">
                                <div class="col-lg-12 col-xl-12">
                                    <div class="row align-items-center">
                                        <div class=" col-lg-4 col-md-4 col-sm-6 my-2 my-md-0">
                                            <div class="input-icon">
                                                <input type="text" class="form-control" placeholder="Search..." name="searchingword" />
                                                <span>
                                                    <i class="flaticon2-search-1 text-muted"></i>
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-3 col-md-4 col-sm-6">
                                            <button type="submit" class="btn btn-light px-6 font-weight-bold">Search</button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!--end::Search Form-->
                    <!--end: Search Form-->
                    <!--begin: Datatable-->
                    <table class="table" id="kt_datatable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Code</th>
                                <th>Category</th>
                                @if ((AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Delete)).Result.Succeeded ||
                                (AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Update)).Result.Succeeded)
                                {
                                    <th >Actions</th>
                                }
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td>@project.Id</td>
                                    <td>@project.Title</td>
                                    <td>@project.Code</td>
                                    <td>@project.ProjectCategory.Name</td>
                                    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Delete)).Result.Succeeded ||
                                   (AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Update)).Result.Succeeded)
                                    {
                                        <td style="text-align:right;" class="text-right">
                                            <table><tr>
                                                    <td>
                                            <a class="btn btn-primary" title="Edit" asp-action="Enroll" asp-route-id="@project.Id">Enroll</a>
                                            </td>
                                            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Update)).Result.Succeeded)
                                            {
                                                <td>
                                                <a asp-controller="Project" asp-action="UpdateProject" asp-route-id="@project.Id" class="btn btn-warning">
                                                    <i class="flaticon-edit"></i>Update
                                                </a>
                                                </td>
                                            }
                                            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.PremissionList.Project_Delete)).Result.Succeeded)
                                            {
                                                <td>
                                                <a asp-action="DeleteProject" asp-route-id="@project.Id" class="btn btn-danger">
                                                    <i class="flaticon2-trash"></i>Delete
                                                </a>
                                                </td>
                                            }
                                                </tr>
                                            </table>
                                             </td>
                                    }

                                </tr>
                            }

                        </tbody>
                    </table>
                    <!--end: Datatable-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
<style>
    th span {
            color: #b5b5c3 !important;
            font-size: .9rem;
            text-transform: uppercase;
            font-weight: 600 !important;
            letter-spacing: .1rem;
        }

        th:last-child span {
            text-align: right;
        }

        [data-field="ID"] span, [data-field="ID"] th {
            width: 34px !important;
        }

        .card.card-custom {
            box-shadow: 0px 0px 30px 0px rgb(82 63 105 / 18%);
            border: 0;
        }

        tbody tr:hover {
            background-color: #F3F6F9;
        }

        .datatable-row {
            border-bottom: 1px solid #EBEDF3;
        }

        @@media only screen and (min-width: 1024px) {
            [data-field="Actions"] span {
                float: right;
                padding-right: 32px;
            }
        }


        th:last-child span {
            float: right;
            padding-right: 40px;
        }

        .datatable-row > .datatable-cell:first-child {
            padding-left: 10px !important;
        }

        .form-control:focus {
            border-color: #ED7D31 !important;
        }

        @@media only screen and (max-width: 500px) {
            table {
                width: 100%;
                overflow-x: auto !important;
            }
        }
</style>