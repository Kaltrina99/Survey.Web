@model Survey.Core.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--begin::Wrapper-->
<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
    <!--begin::Content-->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">


        <div class="d-flex flex-column-fluid">
            <!--begin::Container-->
            <div class="container">

                <div class="row">
                    <div class=" col-lg-3"></div>
                    <div class=" col-lg-6 center-block">
                        <!--begin::Card-->
                        <div class="card card-custom gutter-b example-compact">

                            <!--begin::Form-->
                            <form asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
                                <input asp-for="ProjectCategory.Id" hidden="" />
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="card-body">
                                    <div class="form-group mb-8">
                                        <div style="box-shadow: 0 0 30px 0 #523f690d;" class="card-header flex-wrap border-0 pt-6 pb-0">
                                            <div class="card-title">
                                                <h4 class="card-label text-center">
                                                    Update Category
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label">Category Name</label>
                                        <div class="col-lg-9">
                                            <input asp-for="ProjectCategory.Name" type="text" class="form-control" placeholder="Category Name" />
                                            <span asp-validation-for="ProjectCategory.Name" class="form-text text-muted"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-7 text-center">
                                            <input type="submit" value="Update" class="btn btn-warning mr-2" />
                                            <a asp-action="Index" class="btn btn-secondary">Back to category list</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!--end::Form-->
                        </div>
                        <!--end::Card-->
                    </div>
                    <div class=" col-lg-3"></div>
                </div>
            </div>
            <!--end::Container-->
        </div>
        <!--end::Entry-->
    </div>
    <!--end::Content-->

</div>
<!--end::Wrapper-->

<style>
    .card.card-custom {
        box-shadow: 0px 0px 10px 0px rgb(82 63 105 / 18%);
        border: 0;
    }

    .form-control:focus {
        border-color: #ED7D31 !important;
    }

    .bootstrap-select.show > .dropdown-toggle.btn-light, .bootstrap-select.show > .dropdown-toggle.btn-secondary {
        border-color: #ED7D31 !important;
    }
</style>