@model Survey.Core.Models.ProjectCategory

@{
    ViewData["Title"] = "CreateProjectCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <!--begin::Subheader-->
    <div class="subheader py-6 py-lg-8 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Projects</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item text-muted">
                            <a href="" class="text-muted">Manage</a>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            <a href="" class="text-muted">Programs or Clients</a>
                        </li>
                        <li class="breadcrumb-item text-muted">
                            <a class="text-muted">Create new Program or Client</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class=" col-lg-3"></div>
                <div class="col-lg-6 center-block">
                    <div class="card card-custom gutter-b" style="background-color: #404040;">
                        <div class="card-body d-flex align-items-center py-5 py-lg-15">
                            
                        </div>
                    </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-lg-3">
                        </div>
                        <div class="col-lg-6">
                            <div class="card card-custom" >
                                <div  class="text-center border-0 pt-10 pb-0">
                                    <div class="card-title">
                                        <h4 style="color: #ED7D31;font-weight:800;">
                                            Create new program or client
                                           
                                        </h4>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <form  asp-action="CreateProjectCategory" >
                                              <input asp-for="ParentID" hidden="" />
                                            <div class="card-body">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group row">
                                                    
                                                    <label asp-for="Name" class="col-form-label col-lg-3 control-label ">Program or Client Name</label>
                                                    <div class="col-lg-9 col-form-label ">
                                                        <input asp-for="Name" class="form-control" placeholder="Enter the name of Program or Client" />
                                                        <span asp-validation-for="Name" class="form-text text-bosh text-muted"></span>
                                                    </div>
                                                      
                                                </div>

                                                <div style=" padding: 26px 0 0 0;">
                                                    <div class="row">
                                                        <div class="col-lg-3"></div>
                                                        <div class="col-lg-6 text-center">
                                                            <input type="submit" value="Create" class="btn btn-orange font-weight-bold mr-2" />
                                                            <a asp-action="Index" class="btn btn-light font-weight-bold">Back to List</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            .card.card-custom {
                box-shadow: 0px 0px 5px 0px rgb(82 63 105 / 29%);
            }
        </style>
