@model Survey.Core.Models.ProjectCategory

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">

    <!--end::Subheader-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class=" col-lg-3"></div>
                <div class="col-lg-6 center-block">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-6">
                    <div class="card card-custom">
                        <div style="box-shadow: 0 0 30px 0 #523f690d;" class="card-header flex-wrap border-0 pt-6 pb-0">
                            <div class="card-title">
                                <h4>
                                    Create new category
                                </h4>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="CreateProjectCategory">
                                    <input asp-for="ParentID" hidden="" />
                                    <div class="card-body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group row">

                                            <label asp-for="Name" class="col-form-label col-lg-3 control-label ">Category Name</label>
                                            <div class="col-lg-9 col-form-label ">
                                                <input asp-for="Name" class="form-control" placeholder="Enter the name of category" />
                                                <span asp-validation-for="Name" class="form-text text-bosh text-muted"></span>
                                            </div>

                                        </div>

                                        <div style=" padding: 26px 0 0 0;">
                                            <div class="row">
                                                <div class="col-lg-2"></div>
                                                <div class="col-lg-7 text-center">
                                                    <input type="submit" value="Create" class="btn btn-success font-weight-bold mr-2" />
                                                    <a asp-action="Index" class="btn btn-light font-weight-bold">Back to category list</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.card-custom {
        box-shadow: 0px 0px 5px 0px rgb(82 63 105 / 29%);
    }
</style>
