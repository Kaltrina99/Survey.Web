@using Survey.Core.ViewModels
@model List<CategoryPartUserViewModel>

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.roleId;
}


<div class="container">


    <form method="post">
        <div class="">
            <div class="card-header">
                <h2>Add or remove users from this category</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="checkbox-inline form-check m-1">
                        <label class="checkbox checkbox-outline checkbox-outline-2x">

                            <input type="hidden" asp-for="@Model[i].UserId" class="Checkboxes16" />
                            <input type="hidden" asp-for="@Model[i].UserName" class="Checkboxes16" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <span></span>
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].UserName
                            </label>

                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-warning"
                       style="width:auto" />
                <a asp-action="Index"
                   class="btn btn-light" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>

</div>
<style>
 

    .checkbox.checkbox-outline > input:checked ~ span {
        background-color: transparent;
        border-color: #595959;
    }

        .checkbox.checkbox-outline > input:checked ~ span:after {
            border-color: #595959;
        }

    .form-check {
        padding-left: 0rem;
    }
</style>
