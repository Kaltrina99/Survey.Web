@model Survey.Core.ViewModels.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3>Manage Roles</h3>
    <br />
    <div class="card">

        <div id="viewAll" class="card-body table-responsive">
            <form method="post" asp-action="update" class="d-inline">
                <input asp-for="UserId"  value="@Model.UserId"type="hidden" />
                <table class="table table-striped" id="userRolesTable">
                    <thead>
                        <tr>
                            <th>
                                Role
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int roleindex = 0;
                        }
                        @for (int i = 0; i < Model.UserRoles.Count(); i++)
                        {
                                <tr>
                                    <td>
                                        @Model.UserRoles[i].RoleName
                                    </td>
                                    <td>

                                        <div class="checkbox-inline form-check m-1">

                                            <label class="checkbox checkbox-outline checkbox-outline-2x">
                                                @if (Model.UserRoles[i].Selected)
                                                {
                                                    <input type="checkbox" asp-for="UserRoles[roleindex].Selected" value="true" checked class="form-check-input Checkboxes16">
                                                    <input type="hidden" asp-for="UserRoles[roleindex].RoleName" value="@Model.UserRoles[i].RoleName" class="form-check-input Checkboxes16">

                                                }
                                                else
                                                {
                                                    <input type="checkbox" asp-for="UserRoles[roleindex].Selected" value="true" class="form-check-input Checkboxes16">
                                                    <input type="hidden" asp-for="UserRoles[roleindex].RoleName" value="@Model.UserRoles[i].RoleName" class="form-check-input Checkboxes16">

                                                }
                                                <span></span>
                                            </label>
                                        </div>

                                        @*
                        <div class="form-check m-1">
                            <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                        </div>*@
                                    </td>
                                </tr>
                                roleindex++;

                            
                        }
                        </tbody>
                </table>

                <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                    <button type="submit" id="save" class="btn btn-orange">
                   
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .table td {
        padding: 0.95rem;
        vertical-align: middle;
    }
    .checkbox.checkbox-outline > input:checked ~ span {
        background-color: transparent;
        border-color: #595959;
    }
        .checkbox.checkbox-outline > input:checked ~ span:after {
            border-color: #595959;
        }
    .form-check {
      
        padding-left: 0rem;
    }
</style>

